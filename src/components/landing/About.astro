---
import { cvData } from '@/data/resume';

interface Props {
  t: (key: string) => string;
  lang: string;
}
const { t, lang } = Astro.props;

const aboutText = lang === 'es' ? cvData.about.es : cvData.about.en;
---
<section id="about" class="py-20 bg-primary-900/30 backdrop-blur-sm">
    <div class="max-w-4xl mx-auto px-4 text-center">
        <h2 class="text-3xl font-bold text-slate-900 dark:text-white mb-8">{t('about.title')}</h2>
        
        <div class="prose prose-lg dark:prose-invert mx-auto text-slate-600 dark:text-slate-300 mb-8 leading-relaxed">
            <p>{aboutText}</p>
        </div>

        <!-- Virtudes destacadas -->
        <div class="flex flex-wrap justify-center gap-4 mb-10 text-sm font-semibold text-blue-600 dark:text-blue-400 uppercase tracking-widest">
            {lang === 'es' ? 'Proactivo • Analítico • Trabajo en Equipo' : 'Proactive • Analytical • Teamwork'}
        </div>

        <!-- Botón Descargar CV (Simulado) -->
        <a href="/src/assets/cv.pdf" download class="inline-flex items-center gap-2 px-6 py-3 border-2 border-slate-200 dark:border-slate-700 rounded-lg text-slate-700 dark:text-white font-medium hover:border-blue-500 hover:text-blue-500 dark:hover:border-blue-400 dark:hover:text-blue-400 transition-colors glass">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path></svg>
            {t('btn.downloadCV')}
        </a>
    </div>
</section>