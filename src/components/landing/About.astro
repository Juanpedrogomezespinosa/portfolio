---
interface Props {
  t: (key: string) => string;
}
const { t } = Astro.props;
---
<section id="about" class="py-20 bg-slate-50 dark:bg-slate-900/50">
    <div class="max-w-4xl mx-auto px-4 text-center">
        <h2 class="text-3xl font-bold text-slate-900 dark:text-white mb-8">{t('about.title')}</h2>
        
        <div class="prose prose-lg dark:prose-invert mx-auto text-slate-600 dark:text-slate-400 mb-8">
            <p>{t('about.text')}</p>
        </div>

        <div class="flex flex-wrap justify-center gap-4 mb-10 text-sm font-semibold text-slate-500 dark:text-slate-400 uppercase tracking-widest">
            {t('about.virtues')}
        </div>

        <a href="#" download class="inline-flex items-center gap-2 px-6 py-3 border-2 border-slate-200 dark:border-slate-700 rounded-lg text-slate-700 dark:text-white font-medium hover:border-blue-500 hover:text-blue-500 transition-colors">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path></svg>
            {t('btn.downloadCV')}
        </a>
    </div>
</section>