---
interface Props {
  t: (key: string) => string;
  lang: string;
}
const { t, lang } = Astro.props;
---

<section id="home" class="flex flex-col items-center justify-center py-20 md:py-32 text-center px-4">
    <!-- Photo -->
    <div class="relative mb-8">
        <div class="w-32 h-32 md:w-40 md:h-40 rounded-full overflow-hidden border-4 border-white dark:border-slate-800 shadow-xl mx-auto">
            <img 
                src="https://ui-avatars.com/api/?name=Juan+Pe&background=0D8ABC&color=fff&size=200" 
                alt="Profile" 
                class="w-full h-full object-cover"
            />
        </div>
        <div class="absolute bottom-0 right-0 bg-green-500 w-6 h-6 rounded-full border-4 border-white dark:border-[#0B1120]"></div>
    </div>

    <!-- Name & Description -->
    <h1 class="text-4xl md:text-6xl font-bold text-slate-900 dark:text-white mb-4 tracking-tight">
        Juanpe <span class="text-blue-600">Dev</span>
    </h1>
    <p class="text-xl md:text-2xl font-medium text-blue-600 dark:text-blue-400 mb-6">
        {t('hero.role')}
    </p>
    <p class="text-slate-600 dark:text-slate-400 max-w-2xl mx-auto mb-10 text-lg leading-relaxed">
        {t('hero.description')}
    </p>

    <!-- Say Hello Button -->
    <a href={`/${lang}#contact`} class="inline-flex items-center gap-2 px-8 py-4 bg-blue-600 text-white rounded-full font-semibold hover:bg-blue-700 transition-all shadow-lg hover:shadow-blue-500/25">
        <span>{t('hero.btn')}</span>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path d="M10.894 2.553a1 1 0 00-1.788 0l-7 14a1 1 0 001.169 1.409l5-1.429A1 1 0 009 15.571V11a1 1 0 112 0v4.571a1 1 0 00.725.962l5 1.428a1 1 0 001.17-1.408l-7-14z" />
        </svg>
    </a>
</section>