---
import { ContactForm } from '../react/ContactForm';

interface Props {
  t: (key: string) => string;
}
const { t } = Astro.props;

// Preparamos el objeto de textos para pasárselo a React
const contactTexts = {
    nameLabel: t('contact.name'),
    emailLabel: t('contact.email'),
    messageLabel: t('contact.message'),
    placeholderName: "Juan Pérez", // Puedes poner esto en tu i18n si quieres
    placeholderEmail: "juan@ejemplo.com",
    placeholderMessage: t('contact.placeholder') || "Hola, me gustaría...",
    buttonSend: t('contact.send'),
    buttonSending: "Enviando...",
    buttonSuccess: "¡Enviado con éxito!",
    buttonError: "Error al enviar"
};
---

<section id="contact" class="py-20 px-4">
    <div class="max-w-xl mx-auto text-center">
        <h2 class="text-3xl font-bold mb-8">{t('contact.title')}</h2>
        
        <div class="text-left p-8 card-base rounded-2xl border border-[var(--border-color)] bg-[var(--bg-card)] shadow-2xl">
            <ContactForm client:visible ui={contactTexts} />
        </div>
    </div>
</section>