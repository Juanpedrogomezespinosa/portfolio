---
import { cvData } from '@/data/resume';

interface Props {
  t: (key: string) => string;
  lang: string;
}
const { t, lang } = Astro.props;

const isEs = lang === 'es';
---

<section id="qualification" class="py-20 px-4">
    <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl font-bold text-center text-white mb-16 reveal">{t('qual.title')}</h2>

        <div class="grid md:grid-cols-2 gap-12">
            
            {/* EXPERIENCIA */}
            <div class="reveal reveal-delay-100">
                <h3 class="text-xl font-bold text-blue-400 mb-8 flex items-center gap-2">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg>
                    {t('nav.experience')}
                </h3>
                <div class="space-y-8 border-l-2 border-slate-800 ml-3 pl-8 relative">
                    {cvData.experience.map(job => (
                        <div class="relative group">
                            <span class="absolute -left-[39px] top-1 h-5 w-5 rounded-full border-4 border-slate-950 bg-blue-600 shadow-sm"></span>
                            
                            <h4 class="font-bold text-white text-lg">{isEs ? job.role.es : job.role.en}</h4>
                            <p class="text-sm text-blue-400 font-medium mb-1">{job.company}</p>
                            <p class="text-xs text-slate-500 mb-2 font-mono">{isEs ? job.date.es : job.date.en}</p>
                            <p class="text-sm text-slate-400 leading-relaxed">
                                {isEs ? job.description.es : job.description.en}
                            </p>
                        </div>
                    ))}
                </div>
            </div>

            {/* EDUCACIÃ“N */}
            <div class="reveal reveal-delay-200">
                <h3 class="text-xl font-bold text-purple-400 mb-8 flex items-center gap-2">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14zm-4 6v-7.5l4-2.222"></path></svg>
                    {t('qual.degree')}
                </h3>
                <div class="space-y-8 border-l-2 border-slate-800 ml-3 pl-8 relative">
                    {cvData.education.map(edu => (
                        <div class="relative group">
                            <span class="absolute -left-[39px] top-1 h-5 w-5 rounded-full border-4 border-slate-950 bg-purple-600 shadow-sm"></span>
                            
                            <h4 class="font-bold text-white text-lg">{isEs ? edu.degree.es : edu.degree.en}</h4>
                            <p class="text-sm text-purple-400 font-medium mb-1">{edu.institution}</p>
                            <p class="text-xs text-slate-500 font-mono">{edu.date}</p>
                        </div>
                    ))}
                </div>
            </div>

        </div>
    </div>
</section>