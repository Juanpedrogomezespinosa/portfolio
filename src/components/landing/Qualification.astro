---
interface Props {
  t: (key: string) => string;
}
const { t } = Astro.props;
---

<section id="qualification" class="py-20 bg-slate-50 dark:bg-slate-900/50 px-4">
    <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl font-bold text-center text-slate-900 dark:text-white mb-16">{t('qual.title')}</h2>

        <div class="space-y-12 relative border-l-2 border-slate-200 dark:border-slate-700 ml-3 md:ml-0 md:pl-0">
            <!-- Item 1 -->
            <div class="relative pl-8 md:pl-0">
                <div class="absolute -left-[9px] top-0 w-5 h-5 rounded-full border-4 border-white dark:border-slate-900 bg-blue-600"></div>
                <div class="md:grid md:grid-cols-5 md:gap-8">
                    <div class="md:col-span-1 text-sm font-bold text-slate-500 dark:text-slate-400 mb-1 md:mb-0 md:text-right">2023 - Present</div>
                    <div class="md:col-span-4">
                        <h3 class="text-xl font-bold text-slate-900 dark:text-white">{t('qual.degree')}</h3>
                        <p class="text-slate-600 dark:text-slate-400 mt-1">Universidad de Tecnología</p>
                        <p class="text-slate-500 text-sm mt-2">Especialización en Ingeniería del Software y Sistemas Distribuidos.</p>
                    </div>
                </div>
            </div>

            <!-- Item 2 -->
            <div class="relative pl-8 md:pl-0">
                <div class="absolute -left-[9px] top-0 w-5 h-5 rounded-full border-4 border-white dark:border-slate-900 bg-purple-600"></div>
                <div class="md:grid md:grid-cols-5 md:gap-8">
                    <div class="md:col-span-1 text-sm font-bold text-slate-500 dark:text-slate-400 mb-1 md:mb-0 md:text-right">2022</div>
                    <div class="md:col-span-4">
                        <h3 class="text-xl font-bold text-slate-900 dark:text-white">{t('qual.cert')}</h3>
                        <p class="text-slate-600 dark:text-slate-400 mt-1">AWS Certified Developer & ISTQB Tester</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>