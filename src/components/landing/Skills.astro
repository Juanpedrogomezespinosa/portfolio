---
import { cvData } from '@/data/resume';

interface Props {
  t: (key: string) => string;
}
const { t } = Astro.props;
---

<section id="skills" class="py-20 px-4">
    <div class="max-w-7xl mx-auto">
        <h2 class="text-3xl font-bold text-center mb-16">{t('skills.title')}</h2>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
            
            <!-- Frontend -->
            <div class="card-base p-6 hover:border-blue-500/50 hover:-translate-y-1">
                <div class="h-10 w-10 bg-blue-100 dark:bg-blue-900/30 text-blue-600 rounded-lg flex items-center justify-center mb-6">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg>
                </div>
                <h3 class="text-lg font-bold mb-4">{t('skills.frontend')}</h3>
                <div class="flex flex-wrap gap-2">
                    {cvData.skills.frontend.map(skill => (
                        <span class="px-2 py-1 text-xs font-medium rounded-md bg-blue-50 text-blue-700 dark:bg-blue-900/20 dark:text-blue-300 border border-blue-100 dark:border-blue-800">
                            {skill}
                        </span>
                    ))}
                </div>
            </div>

            <!-- Backend -->
            <div class="card-base p-6 hover:border-green-500/50 hover:-translate-y-1">
                 <div class="h-10 w-10 bg-green-100 dark:bg-green-900/30 text-green-600 rounded-lg flex items-center justify-center mb-6">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"></path></svg>
                </div>
                <h3 class="text-lg font-bold mb-4">{t('skills.backend')}</h3>
                <div class="flex flex-wrap gap-2">
                    {[...cvData.skills.backend, ...cvData.skills.database].map(skill => (
                        <span class="px-2 py-1 text-xs font-medium rounded-md bg-green-50 text-green-700 dark:bg-green-900/20 dark:text-green-300 border border-green-100 dark:border-green-800">
                            {skill}
                        </span>
                    ))}
                </div>
            </div>

            <!-- QA -->
            <div class="card-base p-6 hover:border-purple-500/50 hover:-translate-y-1">
                 <div class="h-10 w-10 bg-purple-100 dark:bg-purple-900/30 text-purple-600 rounded-lg flex items-center justify-center mb-6">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"></path></svg>
                </div>
                <h3 class="text-lg font-bold mb-4">{t('skills.qa')}</h3>
                <div class="flex flex-wrap gap-2">
                    {cvData.skills.qa.map(skill => (
                        <span class="px-2 py-1 text-xs font-medium rounded-md bg-purple-50 text-purple-700 dark:bg-purple-900/20 dark:text-purple-300 border border-purple-100 dark:border-purple-800">
                            {skill}
                        </span>
                    ))}
                </div>
            </div>

            <!-- Tools & DevOps -->
            <div class="card-base p-6 hover:border-yellow-500/50 hover:-translate-y-1">
                <div class="h-10 w-10 bg-yellow-100 dark:bg-yellow-900/30 text-yellow-600 rounded-lg flex items-center justify-center mb-6">
                   <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
               </div>
               <h3 class="text-lg font-bold mb-4">{t('skills.tools')}</h3>
               <div class="flex flex-wrap gap-2">
                   {cvData.skills.tools.map(skill => (
                       <span class="px-2 py-1 text-xs font-medium rounded-md bg-yellow-50 text-yellow-700 dark:bg-yellow-900/20 dark:text-yellow-300 border border-yellow-100 dark:border-yellow-800">
                           {skill}
                       </span>
                   ))}
               </div>
           </div>

        </div>
    </div>
</section>