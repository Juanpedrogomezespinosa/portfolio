---
interface Props {
  t: (key: string) => string;
}
const { t } = Astro.props;

// Mock Data (puedes moverlo a src/data)
const skills = {
    frontend: ['React', 'Astro', 'Tailwind', 'TypeScript', 'Next.js'],
    backend: ['Node.js', 'Express', 'PostgreSQL', 'Firebase', 'Python'],
    qa: ['Cypress', 'Jest', 'Playwright', 'Selenium', 'Postman']
};
---

<section id="skills" class="py-20 px-4">
    <div class="max-w-6xl mx-auto">
        <h2 class="text-3xl font-bold text-center text-slate-900 dark:text-white mb-16">{t('skills.title')}</h2>
        
        <div class="grid md:grid-cols-3 gap-8">
            <!-- Frontend -->
            <div class="bg-white dark:bg-slate-800 p-8 rounded-2xl shadow-sm border border-slate-100 dark:border-slate-700">
                <div class="h-12 w-12 bg-blue-100 dark:bg-blue-900/30 text-blue-600 rounded-lg flex items-center justify-center mb-6">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg>
                </div>
                <h3 class="text-xl font-bold text-slate-900 dark:text-white mb-4">{t('skills.frontend')}</h3>
                <ul class="space-y-2">
                    {skills.frontend.map(skill => (
                        <li class="flex items-center gap-2 text-slate-600 dark:text-slate-400">
                            <span class="w-1.5 h-1.5 bg-blue-500 rounded-full"></span> {skill}
                        </li>
                    ))}
                </ul>
            </div>

            <!-- Backend -->
            <div class="bg-white dark:bg-slate-800 p-8 rounded-2xl shadow-sm border border-slate-100 dark:border-slate-700">
                <div class="h-12 w-12 bg-green-100 dark:bg-green-900/30 text-green-600 rounded-lg flex items-center justify-center mb-6">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"></path></svg>
                </div>
                <h3 class="text-xl font-bold text-slate-900 dark:text-white mb-4">{t('skills.backend')}</h3>
                <ul class="space-y-2">
                    {skills.backend.map(skill => (
                        <li class="flex items-center gap-2 text-slate-600 dark:text-slate-400">
                            <span class="w-1.5 h-1.5 bg-green-500 rounded-full"></span> {skill}
                        </li>
                    ))}
                </ul>
            </div>

            <!-- QA -->
            <div class="bg-white dark:bg-slate-800 p-8 rounded-2xl shadow-sm border border-slate-100 dark:border-slate-700">
                <div class="h-12 w-12 bg-purple-100 dark:bg-purple-900/30 text-purple-600 rounded-lg flex items-center justify-center mb-6">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"></path></svg>
                </div>
                <h3 class="text-xl font-bold text-slate-900 dark:text-white mb-4">{t('skills.qa')}</h3>
                <ul class="space-y-2">
                    {skills.qa.map(skill => (
                        <li class="flex items-center gap-2 text-slate-600 dark:text-slate-400">
                            <span class="w-1.5 h-1.5 bg-purple-500 rounded-full"></span> {skill}
                        </li>
                    ))}
                </ul>
            </div>
        </div>
    </div>
</section>
