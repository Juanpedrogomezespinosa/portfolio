---
// src/layouts/BaseLayout.astro
import '/src/styles/global.css';
interface Props {
  title: string;
  description?: string;
  lang?: string;
}

const { 
  title, 
  description = "Full Stack Developer Portfolio - React, Astro & Tailwind", 
  lang = "es" 
} = Astro.props;
---

<!doctype html>
<html lang={lang} class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-slate-50 dark:bg-[#0B1120] text-slate-900 dark:text-white transition-colors duration-300 min-h-screen">
    
    <div class="relative flex flex-col min-h-screen overflow-hidden">
        <slot />
    </div>

  </body>
</html>